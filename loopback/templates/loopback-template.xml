<config-template xmlns="http://tail-f.com/ns/config/1.0" servicepoint="loopback">
	<devices xmlns="http://tail-f.com/ns/ncs">
		<device>
			<name>{/device}</name>
			<config>
				<interface xmlns="urn:ios">
					<Loopback>
						<name>{/id}</name>
						<ip>
							<address>
								<primary>
									<address>{/ip}</address>
									<mask>{/mask}</mask>
								</primary>
							</address>
						</ip>
					</Loopback>
				</interface>
				<interfaces xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-um-interface-cfg">
					<interface>
						<interface-name>Loopback {/id}</interface-name>
						<ipv4>
							<addresses xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-um-if-ip-address-cfg">
								<address>
									<address>{/ip}</address>
									<netmask>{/mask}</netmask>
								</address>
							</addresses>
						</ipv4>
					</interface>
				</interfaces>
			</config>
		</device>
	</devices>
</config-template>
