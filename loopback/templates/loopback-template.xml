<config-template xmlns="http://tail-f.com/ns/config/1.0" servicepoint="loopback">
	<devices xmlns="http://tail-f.com/ns/ncs">
		<device>
			<name>{/device}</name>
			<config>
				<interface xmlns="urn:ios">
					<Loopback>
						<name>{/id}</name>
						<ip>
							<address>
								<primary>
									<address>{/ip}</address>
									<mask>{/mask}</mask>
								</primary>
							</address>
						</ip>
					</Loopback>
				</interface>
			</config>
		</device>
	</devices>
</config-template>
