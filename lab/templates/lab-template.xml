<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="lab">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <?foreach {/target-device}?>
    <?set devname = {.}?>
      <device>
        <name>{$devname}</name>
        <config>
          <?foreach{/hostnames}?>
            <?if {$devname = node}?>
              <hostname xmlns="urn:ios">{hostname_new}</hostname>
            <?end?>
          <?end?>
        </config>
      </device>
    <?end?>
  </devices>
</config-template>